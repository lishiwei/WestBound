<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f3"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/news_left_margin"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_NewsRecycler_From"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="上海财经" />

        <TextView
            android:id="@+id/tv_NewsRecycler_Time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end"

            android:text="2016-6-18 18:20:00" />
    </LinearLayout>

    <View
        android:layout_width="18dp"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/news_left_margin"
        android:layout_marginTop="12dp"
        android:background="@color/mainColor" />

    <TextView
        android:id="@+id/tv_NewsRecycler_MainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/news_left_margin"
        android:layout_marginRight="@dimen/news_left_margin"
        android:text="艺术与设计的爱恋-2016西岸艺术与设计博览会"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_NewsRecycler_SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/news_left_margin"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/subtitle_color"
        android:layout_marginTop="@dimen/news_left_margin"
        android:layout_marginRight="@dimen/news_left_margin"
        android:text="西岸艺术与设计博览会于9月8号至13号在上海龙腾大道2555号的西岸艺术中心和西岸文化艺术示范区举办" />

    <ImageView
        android:id="@+id/iv_NewsRecycler_ImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_NewsRecycler_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/subtitle_color"
        android:layout_marginLeft="@dimen/news_left_margin"
        android:layout_marginRight="@dimen/news_left_margin"
        android:layout_marginBottom="12dp"
        android:text="西岸艺术与设计博博览会是上海西岸开发有限公司与艺术家周铁海先生联袂举办的中国首个融合顶尖当代艺术与设计的国际性大型博览会，精选口碑与实力俱佳的国内外优秀花了与设计" />
</LinearLayout>